{
     "version": 2,
     "builds": [
          {
               "src": "next.config.js",
               "use": "@vercel/next"
          }
     ],
     "rewrites": [
          {
               "source": "/api/:path*",
               "destination": "/api/:path*"
          }
     ],
     "redirects": [
          {
               "source": "/old-route",
               "destination": "/new-route",
               "permanent": true
          }
     ],
     "headers": [
          {
               "source": "/(.*)",
               "headers": [
                    {
                         "key": "X-Frame-Options",
                         "value": "SAMEORIGIN"
                    },
                    {
                         "key": "X-Content-Type-Options",
                         "value": "nosniff"
                    }
               ]
          }
     ]
}